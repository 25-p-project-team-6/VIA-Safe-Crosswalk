<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity">

    <androidx.camera.view.PreviewView
        android:id="@+id/viewFinder"
        android:layout_width="match_parent"
        android:layout_height="match_parent" />

    <ImageButton
        android:id="@+id/debugToggleButton"
        android:layout_width="48dp"
        android:layout_height="48dp"
        android:layout_margin="16dp"
        android:background="#80000000"
        android:src="@android:drawable/ic_menu_info_details"
        android:contentDescription="Toggle Debug Info"
        app:tint="#FFFFFF"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:elevation="10dp"/>

    <View
        android:id="@+id/statusBorder"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@drawable/border_transparent"
        android:translationZ="5dp" />

    <kr.co.gachon.pproject6.via.ui.OverlayView
        android:id="@+id/overlay"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:translationZ="5dp" />

    <LinearLayout
        android:id="@+id/debugContainer"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:background="#80000000"
        android:padding="16dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        android:elevation="20dp">

        <TextView
            android:id="@+id/modelNameText"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Model: Loading..."
            android:textColor="#FFFFFF"
            android:textSize="14sp"
            android:visibility="gone"/>

        <Spinner
            android:id="@+id/modelSpinner"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="#80FFFFFF"
            android:layout_marginBottom="8dp"/>

        <TextView
            android:id="@+id/fpsText"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="FPS: 0.0"
            android:textColor="#FFFFFF"
            android:textSize="14sp" />

        <TextView
            android:id="@+id/avgFpsText"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Avg FPS: 0.0"
            android:textColor="#FFFFFF"
            android:textSize="14sp" />

        <TextView
            android:id="@+id/latencyText"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Latency: 0ms"
            android:textColor="#FFFFFF"
            android:textSize="14sp" />

        <TextView
            android:id="@+id/avgLatencyText"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Avg Latency: 0ms"
            android:textColor="#FFFFFF"
            android:textSize="14sp" />

        <TextView
            android:id="@+id/targetInfoText"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Target: None"
            android:textColor="#FFFF00"
            android:textSize="14sp"
            android:layout_marginTop="4dp"/>

        <Switch
            android:id="@+id/swRawDetection"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Raw Boxes"
            android:textColor="#FFFFFF"
            android:checked="true" />

        <Switch
            android:id="@+id/swTrafficLogic"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Traffic Logic"
            android:textColor="#FFFFFF"
            android:checked="true" />

        <Switch
            android:id="@+id/swHighlightTarget"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Target Highlight"
            android:textColor="#FFFFFF"
            android:checked="true" />
        <com.google.android.material.switchmaterial.SwitchMaterial
            android:id="@+id/gpuSwitch"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Use GPU"
            android:textColor="#FFFFFF"
            android:checked="false" />

        <Switch
            android:id="@+id/swZoom2x"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Use 2x Zoom"
            android:textColor="#FFFFFF"
            android:checked="false" />

        <TextView
            android:id="@+id/confidenceSliderLabel"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="General Confidence: 0.3"
            android:textColor="#FFFFFF"
            android:layout_marginTop="8dp"/>

        <com.google.android.material.slider.Slider
            android:id="@+id/confidenceSlider"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:valueFrom="0.0"
            android:valueTo="1.0"
            android:value="0.3"
            android:stepSize="0.05" />

        <TextView
            android:id="@+id/trafficConfidenceLabel"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Traffic Confidence: 0.3"
            android:textColor="#FFFFFF"
            android:layout_marginTop="8dp"/>

        <com.google.android.material.slider.Slider
            android:id="@+id/trafficConfidenceSlider"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:valueFrom="0.0"
            android:valueTo="1.0"
            android:value="0.3"
            android:stepSize="0.05" />

    </LinearLayout>

</androidx.constraintlayout.widget.ConstraintLayout>